<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinnerDice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:entries="@array/dice_types"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinnerNumberOfDice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerDice"
        android:layout_marginTop="16dp"
        android:entries="@array/number_of_dice"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerNumberOfDice"
        android:layout_marginTop="24dp"
        android:text="Roll"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRoll"
        android:layout_marginTop="24dp"
        android:text=""
        android:layout_centerHorizontal="true" />

</RelativeLayout>
